<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <h2 class="col-8 offset-2 ">Sign up on Nestify</h2>
    <div class="col-8 offset-2 mt-2">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
             <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input class="form-control" type="text" name="username" id="username" required>
                    <div class="invalid-feedback">write username</div>
            </div>
             <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input class="form-control" type="email" name="email" id="email" required>
                    <div class="invalid-feedback">write a email </div>
            </div>

            <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required>
                    <div class="invalid-feedback">write unique password of atleast 8 charcters</div>
            </div>

            <button class="btn btn-success">signUp</button>
        </form>
    </div>
</div>        