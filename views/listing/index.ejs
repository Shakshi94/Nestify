<% layout('/layouts/boilerplate') -%>
<%-include("../includes/filter.ejs")%>
    <div class="row row-cols-md-2 row-cols-lg-3 row-cols-sm-1 row-cols-xm-1 fa-1x center">
        <% for(let list of allList){ %>
            <a href="/listing/<%=list._id%>" class="card-a">
                <div class="card col listingcard">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="images" style="height:20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <b><p class="card-text"><%=list.title%></p></b>
                        <p class="card-text">&#8377;
                            <%=list.price.toLocaleString("en-IN")%> / night
                            <i class="tax-info">&nbsp; &nbsp; &nbsp +18GST</i>
                        </p>
                        
                    </div>
                </div>
            </a>
         <% } %>
    </div>
